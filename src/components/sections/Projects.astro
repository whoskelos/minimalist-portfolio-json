---
import Section from "@components/Section.astro";
import { projects } from "@cv";
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(({ url, description, highlights, name, isActive }) => {
                return (
                    <li>
                        <article class="project">
                            <header>
                                <h3 class="projectTitle">
                                    <a href={url} title={`Ver el proyecto ${name}`} target="_blank">
                                        {name}
                                    </a>
                                    {
                                        isActive && <span>&bull;</span>
                                    }
                                </h3>
                                <p class="projectDescription">{description}</p>
                            </header>
                            <footer>
                                {

                                    highlights.map((highlight) => {
                                        return (
                                            <span>{highlight}</span>
                                        )
                                    })
                                }
                                
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(200px, 1fr)
        );
        gap: 1rem;
    }

    article {
        background-color: var(--background-article-light);
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article a {
        color: var(--text-color-light);
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        color: var(--text-description-light);
        font-size: .75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span {
        color: rgb(0, 180, 69);
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: .6rem;
    }

    footer span {
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: .6rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>